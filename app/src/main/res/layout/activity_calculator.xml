<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dohny.myapplication.CalculatorActivity">

    <EditText
        android:id="@+id/etVzdalenost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/vzdalenost"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bVzdalenost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etVzdalenost"
        android:layout_centerHorizontal="true"
        android:text="@string/split" />

    <EditText
        android:id="@+id/etSplit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Čas na 500 metrů"
        android:inputType="textPersonName"
        android:layout_below="@+id/bVzdalenost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/bSplit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSplit"
        android:layout_centerHorizontal="true"
        android:text="Spočítej čas na 500 metrů" />

    <EditText
        android:id="@+id/etCas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bSplit"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Čas"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bCas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCas"
        android:layout_centerHorizontal="true"
        android:text="Spočítej čas" />
</RelativeLayout>
